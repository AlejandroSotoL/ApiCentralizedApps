@{
    ViewData["Title"] = "Subir Imagen";
    Layout = "Layout";
}

<div class="min-h-screen flex items-center justify-center bg-base-200 px-4">
    <div class="max-w-md w-full bg-base-100 shadow-lg rounded-xl p-8">
        <h2 class="text-2xl font-bold text-center mb-6">Subir Imagen</h2>

        <form asp-action="SubirImagen" asp-controller="Web" method="post" enctype="multipart/form-data" class="space-y-5">

            <div>
                <label for="municipio" class="block text-sm font-semibold mb-1">Municipio</label>
                <input id="municipio" name="municipio" type="text"
                       class="input input-bordered w-full text-lg"
                       placeholder="Ej: MedellÃ­n" required />
            </div>

            <div>
                <label for="archivo" class="block text-sm font-semibold mb-1">Seleccionar Imagen</label>
                <input id="archivo" name="archivo" type="file" accept="image/*"
                       class="file-input file-input-bordered w-full text-lg" required />
            </div>

            <button type="submit" class="btn btn-primary w-full py-3 text-lg font-semibold">
                Subir Imagen
            </button>

        </form>

        @if(ViewBag.Mensaje != null)
        {
            <p class="mt-4 text-green-600 font-semibold text-center">@ViewBag.Mensaje</p>
            <p class="text-blue-600 text-center"><a href="@ViewBag.Url" target="_blank">@ViewBag.Url</a></p>
        }

        <!-- Mensajes de error -->
        @if(ViewBag.Error != null)
        {
            <p class="mt-4 text-red-600 font-semibold text-center">@ViewBag.Error</p>
        }
    </div>
</div>
