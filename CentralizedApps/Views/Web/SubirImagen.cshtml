@model List<CentralizedApps.Models.Entities.ShieldMunicipality>

@{
    ViewData["Title"] = "Subir Imagen";
    Layout = "Layout";
}

<div class="bg-base-200 min-h-screen p-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-success mb-4 shadow-lg">
            <span>@ViewBag.Mensaje</span>
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-error mb-4 shadow-lg">
            <span>@ViewBag.Error</span>
        </div>
    }

    <section class="bg-base-100 rounded-lg shadow-md">
        <div class="border-base-300 flex items-center justify-between border-b p-4">
            <h2 class="text-xl font-bold">Gestión de escudos de las Alcaldías</h2>
            <button class="btn btn-primary" onclick="document.getElementById('upload_modal').showModal()">
                Nueva Imagen
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="table-zebra table w-full">
                <thead>
                    <tr>
                        <th></th>
                        <th>Municipio</th>
                        <th>URL</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th><input type="checkbox" class="checkbox" /></th>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar">
                                            <div class="mask mask-squircle h-12 w-12">
                                                <img src="@item?.Url" alt="Escudo" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="font-bold">@item?.NameOfMunicipality</div>
                                            <div class="max-w-[200px] truncate text-sm opacity-50">@item?.Url</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="@item?.Url" target="_blank" class="btn btn-ghost btn-xs">Ver</a>
                                </td>
                                <td>
                                    <button class="btn btn-error btn-xs">Desactivar</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="py-4 text-center">
                                No hay imágenes disponibles.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<dialog id="upload_modal" class="modal justify-center">
    <div class="modal-box bg-base-100 w-full max-w-lg rounded-lg shadow-lg">
        <h3 class="mb-4 text-lg font-bold">Subir Imagen</h3>

        <form asp-action="SubirImagen" asp-controller="Web" method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <label class="label">
                    <span class="label-text">Nombre del municipio</span>
                </label>
                <input type="text" name="municipio" placeholder="Escribe un nombre" 
                    class="input input-bordered w-full" required />
            </div>

            <div class="mb-4">
                <label class="label">
                    <span class="label-text">Seleccionar archivo</span>
                </label>
                <input type="file" name="archivo" accept="image/*" 
                       class="file-input file-input-bordered w-full" required />
            </div>

            <div class="modal-action">
                <button type="button" class="btn" onclick="document.getElementById('upload_modal').close()">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </form>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>

@section Scripts {
    <script>
        @if (ViewBag.Mensaje != null)
        {
            <text>
                document.addEventListener("DOMContentLoaded", function () {
                    document.getElementById('upload_modal')?.close();
                });
            </text>
        }
    </script>
}
