@{
    ViewData["Title"] = "Subir Imagen";
    Layout = "Layout";
}

<section class="bg-base-100 rounded-lg shadow-md">
    <div class="border-base-300 flex items-center justify-between border-b p-4">
        <h2 class="text-xl font-bold">Gestión de escudos de las Alcaldías</h2>

        <div class="flex items-center gap-2">
            <label for="filtro-id" class="text-sm font-medium">Filtrar por Identificación</label>
            <input id="filtro-id"
                   type="number"
                   placeholder="0000000"
                   class="w-32 rounded-md border border-red-600 p-2 text-center focus:ring-2 focus:ring-red-400 focus:outline-none" />
        </div>

    </div>
</section>
