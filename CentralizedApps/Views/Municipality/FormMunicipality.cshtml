@using CentralizedApps.Models.Dtos.PrincipalsDtos
@model CentralizedApps.Models.Dtos.PrincipalsDtos.MunicipalityDto

@{
    ViewData["Title"] = "updateWebMunicipality";
    Layout = "Layout";
}

<div class="card bg-base-200 rounded-box p-6 mb-8">

<div class="flex flex-col items-center justify-center gap-3 w-full p-6">
        <div class="avatar">
            <div class="mask mask-squircle h-24 w-24">
                <img src="@Model.municipality?.IdShield?.Url"
                    alt="escudo municipio" />
            </div>
        </div>
        <div class="text-center">
            <h1 class="font-bold text-2xl">@Model.municipality?.Name</h1>
            <p class="text-sm opacity-70">@Model.municipality?.Department?.Name</p>
        </div>
    </div>
    <h2 class="font-bold text-2xl text-center mb-6">
        Tienes que analizár esto.
    </h2>
    <p class="text-center opacity-70 mb-8">
        Antes de registrar la información del municipio, primero debes crear o seleccionar
        un <strong>Tema</strong>, un <strong>Departamento</strong> y un <strong>Banco</strong>.
    </p>

    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h3 class="font-bold text-xl mb-4">Tema</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Seleccionar tema existente</legend>
                <select class="select w-full">
                    <option disabled selected>Seleccione un tema</option>
                    @foreach(var tema in Model.Themes){
                        <option value=@tema.Id selected="@(tema.NameTheme== Model?.municipality?.Theme?.NameTheme)">@tema.NameTheme</option>
                    }
                    
                </select>
            </fieldset>

            <fieldset class="fieldset">
                <legend class="fieldset-legend">Nombre del tema</legend>
                <input type="text" class="input w-full" placeholder="Ej: Tema Juvenil"  value=@Model?.municipality?.Theme?.NameTheme />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Color de fondo</legend>
                <input type="color" class="input w-full" value="@Model.municipality?.Theme?.BackGroundColor" />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Color primario</legend>
                <input type="color" class="input w-full" value=@Model.municipality?.Theme?.PrimaryColor />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Color secundario</legend>
                <input type="color" class="input w-full" value=@Model.municipality?.Theme?.SecondaryColor />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Color secundario oscuro</legend>
                <input type="color" class="input w-full" value=@Model.municipality?.Theme?.SecondaryColorBlack />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Texto en primario (claro)</legend>
                <input type="color" class="input w-full" value=@Model.municipality?.Theme?.OnPrimaryColorLight />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Texto en primario (oscuro)</legend>
                <input type="color" class="input w-full" value=@Model.municipality?.Theme?.OnPrimaryColorDark />
            </fieldset>
        </div>
        <div class="flex justify-end mt-4">
            <button type="button" class="btn btn-primary">Crear Tema</button>
        </div>
    </div>

    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h3 class="font-bold text-xl mb-4">Departamento</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Seleccionar departamento existente</legend>
                <select class="select w-full">
                    <option disabled selected>Seleccione un departamento</option>
                    @foreach(var department in Model.Departments){
                        <option value=@department.Id selected="@(department.Id == Model.municipality?.Department?.Id)">@department.Name</option>
                    } 
                </select>
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Nombre del departamento</legend>
                <input type="text" class="input w-full" placeholder="Ej: Cundinamarca" value=@Model.municipality?.Department?.Name />
            </fieldset>
        </div>
        <div class="flex justify-end mt-4">
            <button type="button" class="btn btn-primary">Crear Departamento</button>
        </div>
    </div>

    <div class="card bg-base-300 rounded-box p-6">
        <h3 class="font-bold text-xl mb-4">Banco</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Seleccionar banco existente</legend>
                <select class="select w-full">
                    <option disabled selected>Seleccione un banco</option>
                    @foreach(var bank in Model.Banks){
                        <option value=@bank.Id  selected="@(bank.NameBank == Model.municipality?.Bank?.NameBank )" >@bank.NameBank</option>
                    } 
                    
                </select>
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Nombre del banco</legend>
                <input type="text" class="input w-full" placeholder="Ej: BBVA" value=@Model.municipality?.Bank?.NameBank />
            </fieldset>
        </div>
        <div class="flex justify-end mt-4">
            <button type="button" class="btn btn-primary">Crear Banco</button>
        </div>
    </div>
</div>

<form asp-action="" asp-controller="" method="post" class="w-full">


    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h2 class="font-bold text-2xl text-center mb-6">Información General</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Código</legend>
                <input type="text" class="input w-full" placeholder="Código" value=@Model.municipality?.EntityCode />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Dominio</legend>
                <input type="text" class="input w-full" placeholder="Dominio" value=@Model.municipality?.Domain />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Escudo</legend>
                <input type="file" class="file-input w-full" value=@Model.municipality?.IdShield?.Url />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Nombre Alcaldía</legend>
                <input type="text" class="input w-full" placeholder="Alcaldía" value=@Model.municipality?.Name />
            </fieldset>
            
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Usuario Fintech</legend>
                <input type="text" class="input w-full" placeholder="userFintech" value=@Model.municipality?.UserFintech />
            </fieldset>
            <fieldset class="fieldset">
                <legend class="fieldset-legend">Contraseña Fintech</legend>
                <input type="password" class="input w-full" placeholder="passwordFintech" value=@Model.municipality?.PasswordFintech/>
            </fieldset>
            <fieldset class="fieldset col-span-3">
                <legend class="fieldset-legend">Política de Privacidad</legend>
                <textarea class="textarea w-full" placeholder="Política de privacidad">@Model.municipality?.DataPrivacy</textarea>
            </fieldset>
            <fieldset class="fieldset col-span-3">
                <legend class="fieldset-legend">Términos y Condiciones</legend>
                <textarea class="textarea w-full" placeholder="Términos y condiciones">@Model.municipality?.DataProcessingPrivacy</textarea>
            </fieldset>
        </div>
    </div>

    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h2 class="font-bold text-2xl text-center mb-6">Configuración</h2>
        <div class="grid md:grid-cols-2 gap-6">
            <div class="card bg-base-200 rounded-box p-6">
                <h3 class="font-bold text-xl mb-4">Cursos</h3>
                <div class="grid grid-cols-2 gap-4">
                    <input type="text" class="input w-full" placeholder="Nombre del curso" value=@Model.Courses.Name />
                    <input type="text" class="input w-full" placeholder="Enlace API / Post" value=@Model.Courses.Get />
                    <input type="text" class="input w-full" placeholder="Enlace API / Post" value=@Model.Courses.Post />
                </div>
                <div class="flex justify-end mt-4">
                    <label class="flex items-center gap-2">
                        <span>Activo</span>
                        <input type="checkbox" checked class="toggle toggle-success" />
                    </label>
                </div>
            </div>

            <div class="card bg-base-200 rounded-box p-6">
                <h3 class="font-bold text-xl mb-4">Escenarios Deportivos</h3>
                <div class="grid grid-cols-2 gap-4">
                    <input type="text" class="input w-full" placeholder="Nombre escenario" value=@Model.SportsFacilities.Name />
                    <input type="text" class="input w-full" placeholder="Enlace GET" value=@Model.SportsFacilities.Get />
                    <input type="text" class="input w-full" placeholder="Calendary POST" value=@Model.SportsFacilities.CalendaryPost />
                    <input type="text" class="input w-full" placeholder="Reservation POST" value=@Model.SportsFacilities.ReservationPost />
                </div>
                <div class="flex justify-end mt-4">
                    <label class="flex items-center gap-2">
                        <span>Activo</span>
                        <input type="checkbox" checked class="toggle toggle-success" value=@Model.SportsFacilities.IsActive />
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h2 class="font-bold text-2xl text-center mb-6">Redes Sociales</h2>
        <div class="grid gap-4">
            @foreach(var  municipalitySocialMedium in Model?.municipality?.MunicipalitySocialMedia ?? new List<MunicipalitySocialMediaDto>())
            {
                <div class="bg-base-200 p-4 rounded-lg grid grid-cols-3 gap-4 items-center">
                    <select class="select w-full">
                        <option disabled>Seleccione red</option>
                        @foreach(var municipalitySocial in Model?.SocialMediaTypes ?? new List<SocialMediaType>()){
                        <option value="@municipalitySocial.Id" selected="@(municipalitySocial?.Id == municipalitySocialMedium?.Id)"  >@municipalitySocial?.Name</option>
                    } 
                    
                    </select>
                    <input type="text" class="input w-full" placeholder="Enlace integración" value=@municipalitySocialMedium?.Url />
                    <label class="flex justify-center items-center gap-2">
                        <span>Activo</span>
                        <input type="checkbox" checked class="toggle toggle-success" value=@municipalitySocialMedium?.IsActive />
                    </label>
                </div>
            }
        </div>
    </div>

    <!-- TRÁMITES -->
    <div class="card bg-base-300 rounded-box p-6 mb-6">
        <h2 class="font-bold text-2xl text-center mb-6">Trámites</h2>
        <div class="grid gap-4">
            @foreach(var  municipalityProcedureDto in Model?.municipality?.MunicipalityProcedures ?? new List<MunicipalityProcedureDto>())
            {
                <div class="bg-base-200 p-4 rounded-lg grid grid-cols-3 gap-4 items-center">
                    <select class="select w-full">
                        <option disabled selected>Seleccione trámite</option>
                        @foreach(var municipalityProcedure in Model?.Procedures ?? new List<Procedure>()){
                        <option value="@municipalityProcedure?.Id" 
                                selected="@(municipalityProcedure?.Id == municipalityProcedureDto?.Procedures?.Id)" >
                                @municipalityProcedure?.Name
                        </option>
                    } 
                    
                    </select>
                    <input type="text" class="input w-full" placeholder="Enlace integración" value=@municipalityProcedureDto?.IntegrationType />
                    <label class="flex justify-center items-center gap-2">
                        <span>Activo</span>
                        <input type="checkbox" checked class="toggle toggle-success" value=@municipalityProcedureDto?.IsActive />
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="flex justify-end gap-4 p-6">
        <button type="reset" class="btn">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
