                document.getElementById('newProcedureId').value = "";
                document.getElementById('newIntegrationType').value = "";
                document.getElementById('newIsActive').checked = true;
            } else {
                Swal.fire({ icon: 'error', title: 'Error', text: result.message || 'No se pudo agregar el proceso.' });
            }
        } catch (error) {
            Swal.fire({ icon: 'error', title: 'Error', text: 'Ocurrió un error inesperado.' });
        }
    }

    function openEditModal(procedure) {
        document.getElementById('editId').value = procedure.id;
        document.getElementById('editMunicipalityId').value = procedure.municipality?.id || currentMunicipalityId;
        document.getElementById('editProcedureId').value = procedure.procedures?.id;
        document.getElementById('editProcedureName').value = procedure.procedures?.name || '';
        document.getElementById('editIntegrationType').value = procedure.integrationType || '';
        document.getElementById('editIsActive').checked = procedure.isActive;

        document.getElementById('edit_modal').showModal();
    }

    async function saveEdit() {
        // 1. Construir el objeto JSON manualmente
        // Esto asegura que la estructura coincida con el DTO de C#
        const payload = {
            Id: parseInt(document.getElementById('editId').value),
            MunicipalityId: parseInt(document.getElementById('editMunicipalityId').value),
            Procedures: {
                Id: parseInt(document.getElementById('editProcedureId').value)
            },
            IntegrationType: document.getElementById('editIntegrationType').value,
            IsActive: document.getElementById('editIsActive').checked
        };

        console.log('[saveEdit] Payload being sent:', JSON.stringify(payload, null, 2));

        try {
            const response = await fetch('/GeneralProcedures/UpdateProcedureJson', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json', // ¡Crucial para que [FromBody] funcione!
                    'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify(payload)
            });

            // Ahora si response.ok es falso, es un error real del servidor (400 o 500)
            const result = await response.json();
            console.log('[saveEdit] Response received:', JSON.stringify(result, null, 2));

            if (response.ok && result.success) {
                document.getElementById('edit_modal').close();
                Swal.fire({
                    icon: 'success',
                    title: 'Actualizado',
                    text: result.message,
                    timer: 1500,
                    showConfirmButton: false
                });
                loadProcedures(currentMunicipalityId);
            } else {
                // Aquí capturamos los errores reales (Validación o Excepciones)
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message || 'No se pudo actualizar.'
                });
            }
        } catch (error) {
            console.error(error);
            Swal.fire({ icon: 'error', title: 'Error', text: 'Error de conexión con el servidor.' });
        }
    }

    async function createNewProcedureType() {
        const nameInput = document.getElementById('newProcedureTypeName');
        const name = nameInput.value.trim();

        if (!name) {
            Swal.fire({ icon: 'warning', title: 'Atención', text: 'Ingresa un nombre para el nuevo proceso.' });
            return;
        }

        try {
            const response = await fetch('/api/Process/Create/NewTypeProcedure', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify({ Name: name })
            });

            const result = await response.json();

            if (result.booleanStatus) { // Note: DTO uses lowercase camelCase in JSON usually, check DTO definition if needed. Assuming standard serialization.
                Swal.fire({ icon: 'success', title: 'Creado', text: result.sentencesError, timer: 1500, showConfirmButton: false })
                    .then(() => location.reload()); // Reload to update dropdown list
            } else {
                Swal.fire({ icon: 'error', title: 'Error', text: result.sentencesError });
            }
        } catch (error) {
            Swal.fire({ icon: 'error', title: 'Error', text: 'Error de conexión.' });
        }
    }
