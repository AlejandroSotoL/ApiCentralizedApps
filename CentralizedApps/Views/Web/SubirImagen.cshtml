@model List<CentralizedApps.Models.Entities.ShieldMunicipality>

@{
    ViewData["Title"] = "Subir Imagen";
    Layout = "Layout";
}

<div class="bg-base-200 min-h-screen p-4">
    <section class="bg-base-100 rounded-lg shadow-md">
        <div class="flex justify-end p-4 border-b border-base-300">
            <button class="btn btn-primary" onclick="document.getElementById('upload_modal').showModal()">
                Nueva Imagen
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
                <thead>
                    <tr>
                        <th></th>
                        <th>Municipio</th>
                        <th>URL</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th><input type="checkbox" class="checkbox" /></th>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar">
                                            <div class="mask mask-squircle w-12 h-12">
                                                <img src="@item?.Url" alt="Escudo" />
                                            </div>
                                        </div>
                                        <div>
                                            <div class="font-bold">@item?.NameOfMunicipality</div>
                                            <div class="text-sm opacity-50">@item?.Url</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-ghost btn-xs">Detalles</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                No hay im√°genes disponibles.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<!-- Modal -->
<dialog id="upload_modal" class="modal justify-center">
    <div class="modal-box bg-base-100 rounded-lg shadow-lg max-w-lg w-full">
        <h3 class="font-bold text-lg mb-4">Subir Imagen</h3>

        <form asp-action="SubirImagen" asp-controller="Web" method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <label class="label">
                    <span class="label-text">Nombre</span>
                </label>
                <input type="text" name="municipio" placeholder="Escribe un nombre" class="input input-bordered w-full"
                    required />
            </div>

            <div class="mb-4">
                <label class="label">
                    <span class="label-text">Seleccionar archivo</span>
                </label>
                <input type="file" name="archivo" accept="image/*" class="file-input file-input-bordered w-full"
                    required />
            </div>

            <div class="modal-action">
                <button type="button" class="btn" onclick="document.getElementById('upload_modal').close()">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </form>

        @if (ViewBag.Mensaje != null)
        {
            <p class="mt-4 text-green-600 font-semibold text-center">@ViewBag.Mensaje</p>
            <p class="text-blue-600 text-center">
                <a href="@ViewBag.Url" target="_blank">@ViewBag.Url</a>
            </p>
        }
        @if (ViewBag.Error != null)
        {
            <p class="mt-4 text-red-600 font-semibold text-center">@ViewBag.Error</p>
        }
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>