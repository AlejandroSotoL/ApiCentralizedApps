@using System.Security.Claims
<!DOCTYPE html>
<html data-theme="light" lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centralización</title>

    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="shortcut icon" href="~/Logos/LogoTramiApp.png" />
    <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
</head>

<body class="bg-base-200 text-base-content min-h-screen">
    <div class="drawer">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />

        <!-- CONTENIDO PRINCIPAL -->
        <div class="drawer-content flex flex-col">
            <!-- NAVBAR -->
            <header class="navbar bg-base-100 shadow-md">
                <label for="my-drawer" class="btn btn-square btn-ghost">
                    <span class="material-icons-outlined text-xl">menu</span>
                </label>

                <div class="flex-1 text-center">
                    <h1 class="text-lg font-bold">Administración</h1>
                </div>

                <div class="flex items-center gap-4">
                    <button id="toggle-theme" class="btn btn-ghost flex items-center gap-2">
                        <span class="material-icons-outlined text-lg">light_mode</span>
                        Cambiar tema
                    </button>
                </div>
            </header>

            <!-- CUERPO -->
            <main class="flex-1 p-6">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="footer footer-center bg-base-300 text-base-content p-4 text-center">
                <p>&copy; 2025 - 1cero1 Software - CENTRALIZACIÓN</p>
            </footer>
        </div>

        <!-- MENÚ LATERAL SOLO PARA ADMIN -->
        @if (User.IsInRole("Administrador"))
        {
            <div class="drawer-side">
                <label for="my-drawer" class="drawer-overlay"></label>

                <div class="bg-base-100 text-base-content min-h-full w-64 p-4">
                    <div class="mb-4 flex items-center gap-4">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBwr_zZjgvmu4BccwDNIHic8K5dyehw7cSYA&s"
                            alt="Logo" class="h-16 rounded-md shadow-md" />
                        <h2 class="text-lg font-bold">Bienvenido @User?.Identity?.Name</h2>
                    </div>

                    <ul class="menu space-y-1">
                        <li class="menu-title">Administración</li>
                        <li>
                            <a href="/" class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">dashboard</span>
                                Centralización
                            </a>
                        </li>

                        <li class="menu-title">Procesos</li>
                        <li>
                            <a href="/Transactions/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">sync_alt</span>
                                Transacciones
                            </a>
                        </li>

                        <li>
                            <a href="/GeneralProcedures/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">schema</span>
                                Procesos y Tipos
                            </a>
                        </li>

                        <li class="menu-title">Municipios</li>
                        <li>
                            <a href="/Municipality/BankIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">account_balance</span>
                                Bancos
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/GraphicThemes"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">palette</span>
                                Temas Gráficos
                            </a>
                        </li>

                        <li>
                            <a href="/Web/SubirImagen"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">image</span>
                                Escudos Alcaldías
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/deparmentIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">apartment</span>
                                Departamentos
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">location_city</span>
                                Alcaldías
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/QueryFieldIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">manage_search</span>
                                Campos de Consulta
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/MunicipalitySocialMediaIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">share</span>
                                Redes Sociales
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/CourseIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">school</span>
                                Cursos por Alcaldía
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/SportsFacilitiesIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">sports_soccer</span>
                                Escenarios Deportivos
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/NewsMunicipalityIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">newspaper</span>
                                Noticias
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/DocomentTypeIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">description</span>
                                Tipos de Documento
                            </a>
                        </li>

                        <li class="pt-2">
                            <button onclick="my_modal.showModal()"
                                class="flex w-full items-center gap-3 rounded-lg px-3 py-2 text-primary transition hover:bg-primary/10">
                                <span class="material-icons-outlined text-lg">person_add</span>
                                Agregar Administrador
                            </button>
                        </li>

                        <li class="pt-2">
                            <a href="/Account/Logout"
                                class="flex items-center gap-3 rounded-lg px-3 py-2 text-red-600 transition hover:bg-red-100">
                                <span class="material-icons-outlined text-lg">logout</span>
                                Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>

    <!-- 🌙 CAMBIO DE TEMA -->
    <script>
        const html = document.documentElement;
        const themeButton = document.getElementById('toggle-theme');
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', savedTheme);

        themeButton.addEventListener('click', () => {
            const current = html.getAttribute('data-theme');
            const next = current === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
        });
    </script>

    <!-- 🧱 MODAL REGISTRO ADMIN -->
    <dialog id="my_modal" class="modal">
        <div class="modal-box rounded-2xl bg-white shadow-2xl border border-gray-100">
            <h3 class="font-bold text-2xl text-gray-800 mb-2">Registrar Administrador</h3>
            <p class="text-sm text-gray-500 mb-4">
                Completa la información para agregar un nuevo administrador.
            </p>

            <form method="post" asp-controller="Account" asp-action="AddAdmin" class="space-y-4">
                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Nombre completo</span>
                    </label>
                    <input type="text" name="completeName" placeholder="Ej: María Pérez"
                        class="input input-bordered w-full rounded-xl focus:ring-2 focus:ring-blue-400" required />
                </div>

                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Usuario</span>
                    </label>
                    <input type="text" name="username" placeholder="Ej: mperez"
                        class="input input-bordered w-full rounded-xl focus:ring-2 focus:ring-blue-400" required />
                </div>

                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Contraseña</span>
                    </label>
                    <div class="relative">
                        <input type="password" name="password" id="password" placeholder="Mínimo 6 caracteres"
                            class="input input-bordered w-full rounded-xl pr-20 focus:ring-2 focus:ring-blue-400"
                            required />
                        <button type="button" onclick="togglePassword()"
                            class="absolute right-2 top-1/2 -translate-y-1/2 text-sm text-blue-600 hover:text-blue-800">
                            Mostrar
                        </button>
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-4">
                    <button type="button" class="btn btn-ghost" onclick="my_modal.close()">Cancelar</button>
                    <button type="submit" class="btn btn-primary rounded-xl px-6">Guardar</button>
                </div>
            </form>
        </div>

        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>

    <script>
        function togglePassword() {
            const pass = document.getElementById("password");
            const btn = event.target;
            if (pass.type === "password") {
                pass.type = "text";
                btn.textContent = "Ocultar";
            } else {
                pass.type = "password";
                btn.textContent = "Mostrar";
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>