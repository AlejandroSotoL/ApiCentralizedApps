<!DOCTYPE html>
<html data-theme="light" lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Proyecto</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
</head>

<body class="bg-base-200 text-base-content min-h-screen">
    <div class="drawer">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />

        <div class="drawer-content flex flex-col">
            <header class="navbar bg-base-100 shadow-md">
                <label for="my-drawer" class="btn btn-square btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </label>

                <div class="flex-1 text-center">
                    <h1 class="text-lg font-bold">Administración</h1>
                </div>

                <div class="flex items-center gap-4">
                    <button id="toggle-theme" class="btn btn-ghost">Cambiar tema</button>
                </div>
            </header>

            @RenderSection("Scripts", required: false)

            <main class="flex-1 p-6">
                @RenderBody()
            </main>

            <footer class="footer footer-center bg-base-300 text-base-content p-4 text-center">
                <p>&copy; 2025 - 1cero1 Software - CENTRALIZACION</p>
            </footer>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="drawer-side">
                <label for="my-drawer" class="drawer-overlay"></label>
                <div class="bg-base-100 text-base-content min-h-full w-64 p-4">
                    <div class="mb-4 flex items-center gap-4">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBwr_zZjgvmu4BccwDNIHic8K5dyehw7cSYA&s"
                            alt="Logo" class="h-16" />
                        <h2 class="text-lg font-bold">Bienvenido @User?.Identity?.Name</h2>
                    </div>

                    <ul class="menu space-y-1">
                        <li class="menu-title">Administración</li>
                        <li>
                            <a href="/Web/EnDesarrollo"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 7h18M3 12h18M3 17h18" />
                                </svg>
                                Administración Centralización
                            </a>
                        </li>

                        <li class="menu-title">Procesos</li>
                        <li>
                            <a href="/Transactions/Index"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 17v-2a4 4 0 014-4h6" />
                                </svg>
                                Transacciones Generales
                            </a>
                        </li>
                        <li>
                            <a href="/GeneralProcedures/Index"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 13l4 4L19 7" />
                                </svg>
                                Procesos y sus tipos
                            </a>
                        </li>

                        <li class="menu-title">Municipios</li>
                        <li>
                            <a href="/Web/SubirImagen"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 16v-1a3 3 0 013-3h10a3 3 0 013 3v1m-4-8l-4-4-4 4m4-4v12" />
                                </svg>
                                Escudos de las Alcaldías
                            </a>
                        </li>
                        <li>
                            <a href="/Municipality/GraphicThemes"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 20h9" />
                                </svg>
                                Temas Gráficos
                            </a>
                        </li>
                        <li>
                            <a href="/Municipality/Index"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 12l2-2m0 0l7-7 7 7m-9 2v8m4-8v8" />
                                </svg>
                                Alcaldías
                            </a>
                        </li>

                        <li class="menu-title">Otros</li>
                        <li>
                            <a href="/Web/EnDesarrollo"
                                class="flex cursor-not-allowed items-center gap-2 rounded-lg px-3 py-2 opacity-70 transition hover:bg-base-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" />
                                </svg>
                                Bancos (Próximamente)
                            </a>
                        </li>

                        <li class="pt-2">
                            <a href="/Account/Logout"
                                class="flex items-center gap-2 rounded-lg px-3 py-2 text-red-600 transition hover:bg-red-100 dark:hover:bg-red-900">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1m0-10V5m0 14a2 2 0 01-2 2h-3a2 2 0 01-2-2V5a2 2 0 012-2h3a2 2 0 012 2" />
                                </svg>
                                Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script>
        const themeButton = document.getElementById('toggle-theme');
        themeButton.addEventListener('click', () => {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            html.setAttribute('data-theme', currentTheme === 'light' ? 'dark' : 'light');
        });
    </script>
</body>

</html>