@{
    ViewData["Title"] = "Subir Imagen";
}

<div class="max-w-md mx-auto mt-10 bg-white shadow-lg rounded-xl p-6">

    <!-- Formulario para subir imagen -->
    <form asp-action="SubirImagen" asp-controller="Web" method="post" enctype="multipart/form-data" class="space-y-5">

        <!-- Campo Municipio -->
        <div>
            <label for="municipio" class="block text-sm font-medium text-gray-700 mb-1">Municipio</label>
            <input id="municipio" name="municipio" type="text"
                   class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500"
                   placeholder="Ej: Medellín" required />
        </div>

        <!-- Campo Archivo -->
        <div>
            <label for="archivo" class="block text-sm font-medium text-gray-700 mb-1">Seleccionar Imagen</label>
            <input id="archivo" name="archivo" type="file" accept="image/*"
                   class="w-full border rounded-lg px-3 py-2 file:mr-3 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-indigo-600 file:text-white hover:file:bg-indigo-700"
                   required />
        </div>

        <!-- Botón de envío -->
        <button type="submit"
                class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-indigo-700">
            Subir Imagen
        </button>

    </form>

    <!-- Mensajes de éxito -->
    @if(ViewBag.Mensaje != null)
    {
        <p class="mt-4 text-green-600 font-semibold">@ViewBag.Mensaje</p>
        <p class="text-blue-600"><a href="@ViewBag.Url" target="_blank">@ViewBag.Url</a></p>
    }

    <!-- Mensajes de error -->
    @if(ViewBag.Error != null)
    {
        <p class="mt-4 text-red-600 font-semibold">@ViewBag.Error</p>
    }
</div>
