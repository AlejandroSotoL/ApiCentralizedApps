<!DOCTYPE html>
<html data-theme="light" lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Proyecto</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="shortcut icon" href="../wwwroot/Logos/LogoTramiApp.png" />
    <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
</head>

<body class="bg-base-200 text-base-content">
    <div class="drawer">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />

        <div class="drawer-content flex flex-col min-h-screen">
            <!-- Navbar -->
            <header class="navbar bg-base-100 shadow-md sticky top-0 z-50">
                <label for="my-drawer" class="btn btn-square btn-ghost">
                    <span class="material-icons-outlined text-xl">menu</span>
                </label>

                <div class="flex-1 text-center">
                    <h1 class="text-lg font-bold">Administración</h1>
                </div>

                <div class="flex items-center gap-4">
                    <button id="toggle-theme" class="btn btn-ghost flex items-center gap-2">
                        <span class="material-icons-outlined text-lg">light_mode</span>
                        Cambiar tema
                    </button>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 p-8">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer footer-center bg-base-300 text-base-content p-6 mt-8">
                <div>
                    <p class="font-semibold">&copy; 2025 - 1cero1 Software - CENTRALIZACION</p>
                </div>
            </footer>
        </div>

        @if (User.IsInRole("Administrador"))
        {
            <div class="drawer-side z-40">
                <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
                <div class="bg-base-100 text-base-content min-h-full w-80 p-4">
                    <div class="mb-6 flex items-center gap-4 p-2">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBwr_zZjgvmu4BccwDNIHic8K5dyehw7cSYA&s"
                            alt="Logo" class="h-16 w-16 rounded-lg" />
                        <div class="flex-1">
                            <h2 class="text-lg font-bold">Bienvenido</h2>
                            <p class="text-sm text-base-content/70">@User?.Identity?.Name</p>
                        </div>
                    </div>

                    <ul class="menu space-y-2 px-2">
                        <li class="menu-title">
                            <span class="text-base font-bold">Administración</span>
                        </li>
                        <li>
                            <a href="/" class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">dashboard</span>
                                <span class="flex-1">Administración Centralización</span>
                            </a>
                        </li>

                        <li class="menu-title mt-4">
                            <span class="text-base font-bold">Procesos</span>
                        </li>
                        <li>
                            <a href="/Transactions/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">sync_alt</span>
                                <span class="flex-1">Transacciones Generales</span>
                            </a>
                        </li>

                        <li>
                            <a href="/GeneralProcedures/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">schema</span>
                                <span class="flex-1">Procesos y sus tipos</span>
                            </a>
                        </li>

                        <li class="menu-title mt-4">
                            <span class="text-base font-bold">Municipios</span>
                        </li>
                        <li>
                            <a href="/Municipality/BankIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">account_balance</span>
                                <span class="flex-1">Bancos</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/GraphicThemes"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">palette</span>
                                <span class="flex-1">Temas Gráficos</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Web/SubirImagen"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">image</span>
                                <span class="flex-1">Escudos de las Alcaldías</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/deparmentIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">apartment</span>
                                <span class="flex-1">Departamentos</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/Index"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">location_city</span>
                                <span class="flex-1">Alcaldías</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/QueryFieldIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">manage_search</span>
                                <span class="flex-1">Campo Consulta</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/MunicipalitySocialMediaIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">share</span>
                                <span class="flex-1">Redes Sociales</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/ProceduresIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">assignment</span>
                                <span class="flex-1">Gestión de Trámites</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/NewsMunicipalityIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">newspaper</span>
                                <span class="flex-1">Noticias</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Municipality/DocomentTypeIndex"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition hover:bg-base-200">
                                <span class="material-icons-outlined text-lg">description</span>
                                <span class="flex-1">Tipos de Documento</span>
                            </a>
                        </li>

                        <div class="divider my-4"></div>

                        <li>
                            <button onclick="my_modal.showModal()"
                                class="flex w-full items-center gap-3 rounded-lg px-3 py-2.5 text-primary transition hover:bg-primary/10">
                                <span class="material-icons-outlined text-lg">person_add</span>
                                <span class="flex-1">Agregar Administrador</span>
                            </button>
                        </li>

                        <li>
                            <a href="/Account/Logout"
                                class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-error transition hover:bg-error/10">
                                <span class="material-icons-outlined text-lg">logout</span>
                                <span class="flex-1">Cerrar Sesión</span>
                            </a>
                        </li>

                        <div class="divider my-4"></div>

                        <li class="menu-title">
                            <span class="text-sm">Próximamente</span>
                        </li>
                        <li>
                            <a href="/Web/EnDesarrollo"
                                class="flex cursor-not-allowed items-center gap-3 rounded-lg px-3 py-2.5 opacity-50 transition">
                                <span class="material-icons-outlined text-lg">credit_card</span>
                                <span class="flex-1">Estado de los pagos</span>
                            </a>
                        </li>

                        <li>
                            <a href="/Web/EnDesarrollo"
                                class="flex cursor-not-allowed items-center gap-3 rounded-lg px-3 py-2.5 opacity-50 transition">
                                <span class="material-icons-outlined text-lg">groups</span>
                                <span class="flex-1">Personas naturales - Invitados</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>

    <dialog id="my_modal" class="modal">
        <div class="modal-box rounded-2xl bg-white shadow-2xl border border-gray-100">
            <h3 class="font-bold text-2xl text-gray-800 mb-2">Registrar Administrador</h3>
            <p class="text-sm text-gray-500 mb-4">
                Completa la información para agregar un nuevo administrador.
            </p>

            <form method="post" asp-controller="Account" asp-action="AddAdmin" class="space-y-4">
                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Nombre completo</span>
                    </label>
                    <input type="text" name="completeName" placeholder="Ej: María Pérez"
                        class="input input-bordered w-full rounded-xl focus:ring-2 focus:ring-blue-400" required />
                </div>

                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Usuario</span>
                    </label>
                    <input type="text" name="username" placeholder="Ej: mperez"
                        class="input input-bordered w-full rounded-xl focus:ring-2 focus:ring-blue-400" required />
                </div>

                <div>
                    <label class="label">
                        <span class="label-text font-semibold">Contraseña</span>
                    </label>
                    <div class="relative">
                        <input type="password" name="password" id="password" placeholder="Mínimo 6 caracteres"
                            class="input input-bordered w-full rounded-xl pr-20 focus:ring-2 focus:ring-blue-400"
                            required />
                        <button type="button" onclick="togglePassword()"
                            class="absolute right-2 top-1/2 -translate-y-1/2 text-sm text-blue-600 hover:text-blue-800">
                            Mostrar
                        </button>
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-4">
                    <button type="button" class="btn btn-ghost" onclick="my_modal.close()">Cancelar</button>
                    <button type="submit" class="btn btn-primary rounded-xl px-6">Guardar</button>
                </div>
            </form>
        </div>

        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>

    <script>
        const html = document.documentElement;
        const themeButton = document.getElementById('toggle-theme');

        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', savedTheme);

        themeButton.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        });

        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const button = event.target;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                button.textContent = 'Ocultar';
            } else {
                passwordInput.type = 'password';
                button.textContent = 'Mostrar';
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>