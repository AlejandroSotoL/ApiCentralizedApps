@{
    Layout = "Layout";
}

<div class="hero bg-base-200 min-h-screen">
    <div class="hero-content flex-col lg:flex-row-reverse justify-center w-full px-4 lg:px-20">
        <div class="card bg-base-100 w-full max-w-md lg:max-w-lg shadow-2xl">
            <div class="card-body p-8">
                <h2 class="text-3xl font-bold text-center mb-6">Iniciar Sesión</h2>
                <form asp-action="Index" asp-controller="Home" method="get">
                <fieldset class="space-y-4">
                    <div>
                        <label class="label font-semibold">Email</label>
                        <input type="email" class="input input-bordered w-full text-lg" placeholder="Email" />
                    </div>
                    <div>
                        <label class="label font-semibold">Password</label>
                        <input type="password" class="input input-bordered w-full text-lg" placeholder="Password" />
                    </div>
                    <div class="text-right">
                        <a class="link link-hover text-sm">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-neutral w-full mt-4 py-3 text-lg">Inicia Sesión</button>
                </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
