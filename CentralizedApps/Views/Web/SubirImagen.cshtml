                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
                Copiar URL
            </button>
        </div>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal-overlay" id="upload-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">📤 Subir Nueva Imagen</h3>
            <button class="close-modal-btn" onclick="closeUploadModal()">&times;</button>
        </div>

        <form id="upload-form" asp-controller="Web" asp-action="AddImage" method="post" enctype="multipart/form-data">
            <!-- Dropzone -->
            <div class="dropzone" id="dropzone" onclick="document.getElementById('file-input').click()">
                <div class="dropzone-icon">📁</div>
                <p class="dropzone-text">
                    Arrastra una imagen aquí o <strong>haz clic para seleccionar</strong>
                </p>
            </div>
            <input type="file" id="file-input" name="archivo" accept="image/*" style="display: none;" required />

            <!-- Image Preview Card -->
            <div class="image-preview-card" id="image-preview-card">
                <img src="" alt="Preview" class="preview-img" id="preview-img" />
                <p class="preview-filename" id="preview-filename"></p>
            </div>

            <!-- Name Field -->
            <div class="form-group">
                <label class="form-label">Nombre del Municipio</label>
                <input type="text" class="form-input" id="shield-name-input" name="municipio"
                    placeholder="Se llenará automáticamente..." required />
            </div>

            <div class="btn-group">
                <button type="button" class="cancel-btn" onclick="closeUploadModal()">Cancelar</button>
                <button type="submit" class="submit-btn" id="submit-btn" disabled>
                    💾 Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // All shields data from Model
        const allShields = @Html.Raw(System.Text.Json.JsonSerializer.Serialize<object>(Model != null ? Model.Select(s => new { id = s.Id, name = s.NameOfMunicipality, url = s.Url }).ToList() : new List<object>()));

        let filteredShields = [...allShields];
        let currentPage = 1;
        const itemsPerPage = 10;

        // DOM Elements
        const tableBody = document.getElementById('shields-table-body');
        const emptyState = document.getElementById('empty-state');
        const paginationInfo = document.getElementById('pagination-info');
        const paginationControls = document.getElementById('pagination-controls');
        const filterName = document.getElementById('filter-name');
        const filterSort = document.getElementById('filter-sort');

        // Apply filters and sorting
        const applyFilters = () => {
            const nameFilter = filterName.value.toLowerCase();
            const sortBy = filterSort.value;

            filteredShields = allShields.filter(shield => {
                return !nameFilter || (shield.name && shield.name.toLowerCase().includes(nameFilter));
            });

            // Sort
            switch (sortBy) {
                case 'latest':
                    filteredShields.sort((a, b) => b.id - a.id);
                    break;
                case 'oldest':
                    filteredShields.sort((a, b) => a.id - b.id);
                    break;
                case 'a-z':
                    filteredShields.sort((a, b) => (a.name || '').localeCompare(b.name || ''));
                    break;
                case 'z-a':
                    filteredShields.sort((a, b) => (b.name || '').localeCompare(a.name || ''));
                    break;
            }

            currentPage = 1;
            renderTable();
        };

        // Render table with pagination
        const renderTable = () => {
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pageShields = filteredShields.slice(startIndex, endIndex);

            tableBody.innerHTML = '';

            if (filteredShields.length === 0) {
                emptyState.style.display = 'block';
                document.querySelector('.shields-table').style.display = 'none';
                document.getElementById('pagination-container').style.display = 'none';
                return;
            }

            emptyState.style.display = 'none';
            document.querySelector('.shields-table').style.display = 'table';
            document.getElementById('pagination-container').style.display = 'flex';

            pageShields.forEach(shield => {
                const row = document.createElement('tr');
                row.className = 'animate-fade-in';
                row.innerHTML = `
                    <td>
                        <img src="${shield.url || ''}" alt="Escudo" class="shield-preview" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🛡️</text></svg>'" />
                    </td>
                    <td>
                        <span class="shield-name">${shield.name || 'Sin nombre'}</span>
                    </td>
                    <td>
                        <button class="action-btn view" onclick="openViewModal('${shield.name || ''}', '${shield.url || ''}')">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            Ver
                        </button>
                    </td>
                `;
                tableBody.appendChild(row);
            });

            renderPagination();
        };

        // Render pagination controls
        const renderPagination = () => {
            const totalPages = Math.ceil(filteredShields.length / itemsPerPage);
            const startItem = (currentPage - 1) * itemsPerPage + 1;
            const endItem = Math.min(currentPage * itemsPerPage, filteredShields.length);

            paginationInfo.textContent = filteredShields.length > 0
                ? `Mostrando ${startItem}-${endItem} de ${filteredShields.length}`
                : 'Mostrando 0 de 0';

            paginationControls.innerHTML = '';

            if (totalPages <= 1) return;

            // Previous button
            const prevBtn = document.createElement('button');
            prevBtn.className = 'page-btn';
            prevBtn.textContent = '← Anterior';
            prevBtn.disabled = currentPage === 1;
            prevBtn.onclick = () => { currentPage--; renderTable(); };
            paginationControls.appendChild(prevBtn);

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                if (totalPages > 7 && i > 2 && i < totalPages - 1 && Math.abs(i - currentPage) > 1) {
                    if (i === 3 || i === totalPages - 2) {
                        const dots = document.createElement('span');
                        dots.textContent = '...';
                        dots.style.padding = '0.5rem';
                        paginationControls.appendChild(dots);
                    }
                    continue;
                }

                const pageBtn = document.createElement('button');
                pageBtn.className = `page-btn ${i === currentPage ? 'active' : ''}`;
                pageBtn.textContent = i;
                pageBtn.onclick = () => { currentPage = i; renderTable(); };
                paginationControls.appendChild(pageBtn);
            }

            // Next button
            const nextBtn = document.createElement('button');
            nextBtn.className = 'page-btn';
            nextBtn.textContent = 'Siguiente →';
            nextBtn.disabled = currentPage === totalPages || totalPages === 0;
            nextBtn.onclick = () => { currentPage++; renderTable(); };
            paginationControls.appendChild(nextBtn);
        };

        // Event listeners for filters
        filterName.addEventListener('input', applyFilters);
        filterSort.addEventListener('change', applyFilters);

        // Reset filters
        window.resetFilters = () => {
            filterName.value = '';
            filterSort.value = 'latest';
            applyFilters();
        };

        // Initialize
        applyFilters();

        // ======================== MODALS ========================

        // View Modal
        window.openViewModal = (name, url) => {
            document.getElementById('view-modal-title').textContent = `🛡️ ${name}`;
            document.getElementById('view-shield-img').src = url;
            document.getElementById('view-shield-url').textContent = url;
            document.getElementById('view-modal').classList.add('active');
        };

        window.closeViewModal = () => {
            document.getElementById('view-modal').classList.remove('active');
            document.getElementById('copy-url-btn').classList.remove('copied');
            document.getElementById('copy-url-btn').innerHTML = `
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
                Copiar URL
            `;
        };

        window.copyUrl = async () => {
            const url = document.getElementById('view-shield-url').textContent;
            const btn = document.getElementById('copy-url-btn');

            try {
                await navigator.clipboard.writeText(url);
                btn.classList.add('copied');
                btn.innerHTML = `
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    ¡Copiado!
                `;

                setTimeout(() => {
                    btn.classList.remove('copied');
                    btn.innerHTML = `
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                        </svg>
                        Copiar URL
                    `;
                }, 2000);
            } catch (err) {
                Swal.fire({ icon: 'error', title: 'Error', text: 'No se pudo copiar la URL' });
            }
        };

        // Upload Modal
        window.openUploadModal = () => {
            document.getElementById('upload-modal').classList.add('active');
        };

        window.closeUploadModal = () => {
            document.getElementById('upload-modal').classList.remove('active');
            // Reset form
            document.getElementById('upload-form').reset();
            document.getElementById('image-preview-card').classList.remove('active');
            document.getElementById('submit-btn').disabled = true;
        };

        // Close modals on overlay click
        document.getElementById('view-modal').addEventListener('click', (e) => {
            if (e.target.id === 'view-modal') closeViewModal();
        });

        document.getElementById('upload-modal').addEventListener('click', (e) => {
            if (e.target.id === 'upload-modal') closeUploadModal();
        });

        // ======================== DRAG & DROP ========================
        const dropzone = document.getElementById('dropzone');
        const fileInput = document.getElementById('file-input');
        const previewCard = document.getElementById('image-preview-card');
        const previewImg = document.getElementById('preview-img');
        const previewFilename = document.getElementById('preview-filename');
        const shieldNameInput = document.getElementById('shield-name-input');
        const submitBtn = document.getElementById('submit-btn');

        const handleFile = (file) => {
            if (!file || !file.type.startsWith('image/')) {
                Swal.fire({ icon: 'error', title: 'Error', text: 'Por favor selecciona un archivo de imagen válido.' });
                return;
            }

            // Show preview
            const reader = new FileReader();
            reader.onload = (e) => {
                previewImg.src = e.target.result;
                previewCard.classList.add('active');
            };
            reader.readAsDataURL(file);

            // Set filename display
            previewFilename.textContent = file.name;

            // Auto-populate name from filename (remove extension)
            const nameWithoutExt = file.name.replace(/\.[^/.]+$/, '');
            shieldNameInput.value = nameWithoutExt;

            // Enable submit button
            submitBtn.disabled = false;

            // Hide dropzone text
            dropzone.style.display = 'none';
        };

        // File input change
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) handleFile(file);
        });

        // Drag and drop events
        dropzone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropzone.classList.add('dragover');
        });

        dropzone.addEventListener('dragleave', () => {
            dropzone.classList.remove('dragover');
        });

        dropzone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropzone.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file) {
                // Set the file to input for form submission
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                fileInput.files = dataTransfer.files;
                handleFile(file);
            }
        });

        // Form submission
        document.getElementById('upload-form').addEventListener('submit', (e) => {
            // Let the form submit naturally to the server
            // The page will reload after successful upload
        });
    });
</script>