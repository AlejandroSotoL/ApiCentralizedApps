@model List<CentralizedApps.Models.Dtos.PrincipalsDtos.GetMunicipalitysDto>;

@{
    ViewData["Title"] = "Index HOLA r";
    Layout = "Layout";
}

<div class=" flex flex-col P-10 ">

    <div class="flex flex-col md:flex-row p-4 gap-4  justify-between">

        <!-- SELECT -->
        <div class=" w-full md:w-full flex justify-center items-center self-center">
            <select class="select select-ghost w-full md:w-1/3 bg-white">
                <option disabled selected>Seleciona</option>
                <option>Antioquia</option>
                <option>Medellín</option>
                <option>Santander</option>
            </select>
        </div>

        <!-- BOTONES -->
        <div class="w-full md:w-3/4 flex flex-wrap justify-evenly md:justify-evenly gap-2 p-2 self-end">
            <button class="btn btn-outline btn-accent">BUSCAR</button>
            <button class="btn btn-outline btn-accent">CREAR</button>
            <button class="btn btn-outline btn-warning">EDITAR</button>
            <button class="btn btn-outline btn-error">ELIMINAR</button>
        </div>
    </div>

    <br>
    <div>
        <div class="overflow-x-auto mt-4">
            <table class="table">
                <!-- head -->
                <thead class="bg-gray-200">
                    <tr>
                        <th>
                            <label>
                                <input type="checkbox" class="checkbox" />
                            </label>
                        </th>
                        <th>Municipio</th>
                        <th>Código</th>
                        <th>Departamento</th>
                        <th>Banco</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var municipio in Model)
                    {
                        <tr>
                            <th>
                                <label>
                                    <input type="checkbox" class="checkbox" />
                                </label>
                            </th>
                            <td>
                                <div class="flex items-center gap-3">
                                    <div class="avatar">
                                        <div class="mask mask-squircle h-12 w-12">
                                            <img src="@municipio?.IdShield?.Url" alt="escudo municipio" />
                                        </div>
                                    </div>
                                    <div>
                                        <div class="font-bold">@municipio?.Name</div>
                                    </div>
                                </div>
                            </td>
                            <td>@municipio?.EntityCode</td>
                            <td>@municipio?.Department?.Name</td>
                            <td>@municipio?.Bank?.NameBank</td>
                            <td>
                                @(municipio?.IsActive == true ? "Sí" : "No")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>