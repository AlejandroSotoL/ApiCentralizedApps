@using CentralizedApps.Models.Dtos.PrincipalsDtos
@model CentralizedApps.Models.Dtos.PrincipalsDtos.MunicipalityDto

@{
    ViewData["Title"] = "Formulario de Municipío";
    Layout = "Layout";
}

<form asp-action="SaveMunicipality" asp-controller="Municipality" method="post" enctype="multipart/form-data"
    class="w-full">
    <div class="card bg-base-200 rounded-box mb-8 p-6">

        <!-- Avatar y Nombre -->
        <div class="flex w-full flex-col items-center justify-center gap-3 p-6">
            <div class="avatar">
                <div class="mask mask-squircle h-24 w-24">
                    <img id="previewEscudo" src="@Model?.municipality?.IdShield?.Url" alt="escudo municipio" />
                </div>
            </div>
            <div class="text-center">
                <h1 class="text-2xl font-bold">@Model?.municipality?.Name</h1>
                <p class="text-sm opacity-70">@Model?.municipality?.Department?.Name</p>
            </div>
        </div>

        <h2 class="mb-6 text-center text-2xl font-bold">Tienes que analizár esto.</h2>
        <p class="mb-8 text-center opacity-70">
            Antes de registrar la información del municipio, primero debes crear o seleccionar
            un <strong>Tema</strong>, un <strong>Departamento</strong> y un <strong>Banco</strong>.
        </p>

        <div class="card bg-base-300 rounded-box mb-6 p-6">
            <h3 class="mb-4 text-xl font-bold">Tema</h3>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Seleccionar tema existente</legend>
                    <select class="select w-full" name="municipality.Theme.Id">
                        <option disabled selected>Seleccione un tema</option>
                        @foreach (var tema in Model!.Themes)
                        {
                            <option value="@tema.Id">@tema.NameTheme</option>
                        }
                    </select>
                </fieldset>


                <fieldset class=" fieldset">
                    <legend class="fieldset-legend">Nombre del tema</legend>
                    <input type="text" class="input w-full" name="municipality.Theme.NameTheme"
                        placeholder="Ej: Tema Juvenil" value="@Model?.municipality?.Theme?.NameTheme" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Color de fondo</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.BackGroundColor"
                        value="@Model?.municipality?.Theme?.BackGroundColor?.Replace("0xFF", "#")" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Color primario</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.PrimaryColor"
                        value="@Model?.municipality?.Theme?.PrimaryColor?.Replace("0xFF", "#")" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Color secundario</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.SecondaryColor"
                        value="@Model?.municipality?.Theme?.SecondaryColor?.Replace("0xFF", "#")" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Color secundario oscuro</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.SecondaryColorBlack"
                        value="@Model?.municipality?.Theme?.SecondaryColorBlack?.Replace("0xFF", "#")" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Texto en primario (claro)</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.OnPrimaryColorLight"
                        value="@Model?.municipality?.Theme?.OnPrimaryColorLight?.Replace("0xFF", "#")" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Texto en primario (oscuro)</legend>
                    <input type="color" class="input w-full color-input" name="municipality.Theme.OnPrimaryColorDark"
                        value="@Model?.municipality?.Theme?.OnPrimaryColorDark?.Replace("0xFF", "#")" />
                </fieldset>

            </div>
        </div>

        <!-- Información General -->
        <div class="card bg-base-300 rounded-box mb-6 p-6">
            <h2 class="mb-6 text-center text-2xl font-bold">Información General</h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-3">

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Código</legend>
                    <input type="text" class="input w-full" name="municipality.EntityCode"
                        value="@Model.municipality?.EntityCode" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Dominio</legend>
                    <div class="flex gap-2 items-center">
                        <input type="text" class="input w-full" name="municipality.Domain"
                            value="@Model.municipality?.Domain" />
                        <a class="btn btn-primary" href="@Model.municipality?.Domain" target="_blank"
                            title="Abrir dominio">
                            Observar
                        </a>
                    </div>
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Escudo</legend>
                    <div class="flex gap-2 items-center">
                        <input type="file" class="file-input w-full" name="EscudoFile"
                            onchange="previewEscudo(event)" />
                        <button type="button" class="btn btn-secondary" onclick="openEscudo()" title="Vista previa">
                            Observar
                        </button>
                    </div>
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Nombre Alcaldía</legend>
                    <input type="text" class="input w-full" name="municipality.Name"
                        value="@Model.municipality?.Name" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Usuario Fintech</legend>
                    <input type="text" class="input w-full" name="municipality.UserFintech"
                        value="@Model.municipality?.UserFintech" />
                </fieldset>

                <fieldset class="fieldset">
                    <legend class="fieldset-legend">Contraseña Fintech</legend>
                    <input type="password" class="input w-full" name="municipality.PasswordFintech"
                        value="@Model.municipality?.PasswordFintech" />
                </fieldset>

                <fieldset class="fieldset col-span-3">
                    <legend class="fieldset-legend">Política de Privacidad</legend>
                    <textarea class="textarea w-full"
                        name="municipality.DataPrivacy">@Model.municipality?.DataPrivacy</textarea>
                </fieldset>

                <fieldset class="fieldset col-span-3">
                    <legend class="fieldset-legend">Términos y Condiciones</legend>
                    <textarea class="textarea w-full"
                        name="municipality.DataProcessingPrivacy">@Model.municipality?.DataProcessingPrivacy</textarea>
                </fieldset>

            </div>
        </div>

        <div class="flex justify-end mt-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>

<script>
    function previewEscudo(event) {
        const reader = new FileReader();
        reader.onload = function () {
            document.getElementById('previewEscudo').src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }

    function openEscudo() {
        const src = document.getElementById('previewEscudo').src;
        if (src) window.open(src, '_blank');
    }

</script>